{
  "name": "core",
  "version": "0.0.0",
  "description": "Easily browse, read, edit, add, and delete (BREAD) data from third-party providers",
  "author": {
    "name": "Easybread",
    "url": "https://easybread.io/"
  },
  "contributors": [
    {
      "name": "Idris Adamjy",
      "email": "adamjyidris@gmail.com"
    },
    {
      "name": "William Reiske",
      "email": "wreiske@mieweb.com"
    },
    {
      "name": "Alexander Cherednichenko",
      "email": "alexandr2110pro@gmail.com"
    }
  ],
  "homepage": "https://github.com/easybread/easybread#readme",
  "license": "MIT",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "directories": {
    "lib": "lib",
    "test": "__tests__"
  },
  "files": [
    "lib"
  ],
  "scripts": {
    "prebuild": "yarn lint:fix",
    "build": "tsc",
    "check-types": "tsc --noEmit",
    "prettier:write": "prettier 'src/**/*.ts' --write",
    "prettier:check": "prettier 'src/**/*.ts' --check",
    "lint": "eslint 'src/**/*.ts'",
    "lint:ci": "yarn lint --quiet --format junit -o reports/junit/js-lint-results.xml",
    "lint:fix": "eslint 'src/**/*.ts' --fix",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:ci": "jest --ci --coverage --bail --reporters=default --reporters=jest-junit",
    "test:watch": "jest --coverage --passWithNoTests --watchAll"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn check-types && lint-staged && yarn test"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "yarn lint:fix"
    ]
  },
  "dependencies": {
    "axios": "^0.19.2",
    "lodash": "^4.17.15",
    "schema-dts": "^0.5.2"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/jest": "^25.1.4",
    "@types/lodash": "^4.14.149",
    "@types/node": "^13.9.0",
    "@types/uuid": "^7.0.2",
    "@typescript-eslint/eslint-plugin": "^2.23.0",
    "@typescript-eslint/parser": "^2.23.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-simple-import-sort": "^5.0.2",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "jest-junit": "^10.0.0",
    "jest-mock-axios": "^3.2.0",
    "lint-staged": "^10.0.8",
    "prettier": "^1.19.1",
    "ts-jest": "^25.2.1",
    "typescript": "^3.8.3"
  }
}
