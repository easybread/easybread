    "directory": "packages/schemas"
  },
  "homepage": "https://easybread.io",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "directories": {
    "lib": "lib",
    "test": "__tests__"
  },
  "files": [
    "lib",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "contributors": [
    {
      "name": "Idris Adamjy",
